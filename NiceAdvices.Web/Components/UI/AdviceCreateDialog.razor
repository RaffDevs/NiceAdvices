<MudHidden Breakpoint="Breakpoint.MdAndUp">
    <MudDialog Style="width: 80%; height: 50%">
        <TitleContent>New Advice</TitleContent>
        <DialogContent>
            <MudStack >
                <EditForm Model="@Model">
                    <DataAnnotationsValidator/>
                    <MudTextField @bind-Value="Model.Text" T="string" Label="Your Advice" For="@(() => Model.Author)"/>
                    <MudTextField @bind-Value="Model.Author" T="string" Label="Author" For="@(() => Model.Author)"/>
                </EditForm>
            </MudStack>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="() => { }" ButtonType="ButtonType.Submit" Class="green-text">OK</MudButton>
            <MudButton OnClick="Cancel" Class="red-text">CANCEL</MudButton>
        </DialogActions>
    </MudDialog>
</MudHidden>

